# ====================================
# SelfWorld Discord Bot Configuration
# ====================================

# ----------------
# Discord Settings
# ----------------
# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord application client ID
CLIENT_ID=your_discord_client_id_here

# The ID of your Discord server/guild
GUILD_ID=your_discord_guild_id_here

# ----------------
# Owner Settings
# ----------------
# Your Discord user ID (for owner-only commands)
OWNER_USER_ID=your_discord_user_id_here
# Alternative: OWNER_ID=your_discord_user_id_here

# ----------------
# Database Settings
# ----------------
# MySQL database connection
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=selfworld
DB_PASSWORD=selfworld
DB_NAME=selfworld

# ----------------
# Environment
# ----------------
# Set to 'development' for pretty logs, 'production' for JSON logs
NODE_ENV=development
